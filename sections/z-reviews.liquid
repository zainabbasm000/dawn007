<style>
  .tus_reviews_bg {
    width: 100%;
    background-color: {{section.settings.tus_reviews_bg}};
  }

  .tus_reviews {
    width: 100%;
    padding: 30px 20px;
  }
 .tus_reviews_bg .tus_container {
   padding:0 !important;
 }
  .tus_reviews_heading {
    width: 100%;
  }

  .tus_reviews_heading h2 {
    margin: 0px;
    color: {{section.settings.tus_reviews_heading_c}};
    font-family: FS_Emeric_medium;
    font-size: 56px;
    line-height: 66px;
    letter-spacing: 0px;
  }

  .tus_reviews_content {
    width: 100%;
    padding: 10px 15px 0px;
  }

  .tus_reviews_ct_data {
    padding: 20px 15px;
  }

  .tus_reviews_ct_heading {
    width: max-content;
    box-shadow: 0px 4px 4px 0px #00000040;
    border-radius: 15px 15px 0px 0px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 10px 10px;
  }

  .tus_reviews_ct_heading img {
    width: 27px;
    display: block;
    padding: 0px 5px 0px 0px;
  }

  .tus_reviews_ct_heading h2 {
    margin: 0px;
    font-family: var(--future_pt);
    font-size: 15px;
    line-height: 19px;
  }

  .tus_reviews_ct_review {
    width: 100%;
    box-shadow: 0px 4px 4px 0px #00000040;
    border-radius: 0px 10px 10px 10px;
    padding: 30px 20px;
  }

  .tus_rc_review_rating {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  .tus_rc_review_rating img {
    width: 17px;
    display: block;
    padding: 0px 2px 0px 0px;
  }

  .tus_rc_review_comment {
    width: 100%;
    padding: 20px 0px 0px;
  }

  .tus_rc_review_comment p {
    margin: 0px;
    font-family: Arial_Regular;
    font-size: 16px;
    line-height: 22px;
    letter-spacing: 0px;
  }

  .tus_rc_review_title {
    width: 100%;
    padding: 20px 0px 0px;
  }

  .tus_rc_review_title p {
    margin: 0px;
    font-family: Arial_Regular;
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0px;
  }

  .tus_reviews_content .slick-dots {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    list-style-type: none;
    margin: 0px;
    padding: 20px 0px 0px;
  }

  .tus_reviews_content .slick-dots li {
    background-color: {{section.settings.tus_reviews_content_dots}};
    border-radius: 50%;
    width: 12px;
    height: 12px;
    margin: 0px 5px;
    cursor: pointer;
  }

  .tus_reviews_content .slick-dots li.slick-active {
    background-color: {{section.settings.tus_reviews_content_dots_a}};
  }

  .tus_reviews_content .slick-dots li button {
    display: none;
  }

  @media (max-width: 1024px){
    .tus_reviews_heading h2 {
      font-size: 28px;
      line-height: 36px;
    }

    .tus_reviews_content {
      padding: 10px 10px 0px;
    }

    .tus_reviews_ct_data {
      padding: 10px 10px;
    }
  }

  @media (max-width: 768px){
    .tus_reviews {
      padding: 20px 10px;
    }
   .tus_reviews_bg .tus_container {
    padding:0 !important;
    }
    .tus_reviews_content {
      padding: 10px 0px 0px;
    }

    .tus_reviews_ct_review {
      padding: 30px 30px;
    }
  }
  
</style>

<div id="tus-reviews">
  <div class="tus_reviews_bg">
    <div class="tus_container">
      <div class="tus_reviews">
        {% if section.settings.tus_reviews_heading != blank %}
          <div class="tus_reviews_heading">
            <h2>{{section.settings.tus_reviews_heading}}</h2>
          </div>
        {% endif %}
        <div class="tus_reviews_content">
          {% for block in section.blocks %}
            {% if block.type == "select_review" %}
              <div class="tus_reviews_ct_data">
                {% if block.settings.tus_reviews_ct_heading != blank %}
                  <div class="tus_reviews_ct_heading" style="background-color:{{block.settings.tus_reviews_ct_heading_bg}};">
                    {% if block.settings.tus_reviews_ct_heading_logo != blank %}
                      <img src="{{block.settings.tus_reviews_ct_heading_logo | img_url: "master"}}">
                    {% endif %}
                    <h2 style="color:{{block.settings.tus_reviews_ct_heading_c}};">{{block.settings.tus_reviews_ct_heading}}</h2>
                  </div>
                {% endif %}
                <div class="tus_reviews_ct_review" style="background-color:{{block.settings.tus_reviews_ct_review_bg}};">
                  <div class="tus_rc_review_rating">
                    {% if block.settings.tus_rc_review_rating_full != blank %}
                      <img class="tus_rc_review_rating_full tus_rc_review_rating_full_{{forloop.index}}" src="{{block.settings.tus_rc_review_rating_full | img_url: "master"}}">
                    {% endif %}
                    {% if block.settings.tus_rc_review_rating_full != blank %}
                      <img class="tus_rc_review_rating_full tus_rc_review_rating_full_{{forloop.index}}" src="{{block.settings.tus_rc_review_rating_full | img_url: "master"}}">
                    {% endif %}
                    {% if block.settings.tus_rc_review_rating_full != blank %}
                      <img class="tus_rc_review_rating_full tus_rc_review_rating_full_{{forloop.index}}" src="{{block.settings.tus_rc_review_rating_full | img_url: "master"}}">
                    {% endif %}
                    {% if block.settings.tus_rc_review_rating_full != blank %}
                      <img class="tus_rc_review_rating_full tus_rc_review_rating_full_{{forloop.index}}" src="{{block.settings.tus_rc_review_rating_full | img_url: "master"}}">
                    {% endif %}
                    {% if block.settings.tus_rc_review_rating_half != blank %}
                      <img class="tus_rc_review_rating_half tus_rc_review_rating_half_{{forloop.index}}" src="{{block.settings.tus_rc_review_rating_half | img_url: "master"}}">
                    {% endif %}
                  </div>
                  {% if block.settings.tus_rc_review_comment != blank %}
                    <div class="tus_rc_review_comment">
                      <p style="color:{{block.settings.tus_rc_review_comment_c}};">{{block.settings.tus_rc_review_comment}}</p>
                    </div>
                  {% endif %}
                  {% if block.settings.tus_rc_review_title != blank %}
                  <div class="tus_rc_review_title">
                    <p style="color:{{block.settings.tus_rc_review_title_c}};">{{block.settings.tus_rc_review_title}}</p>
                  </div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(".tus_reviews_content").slick({
    dots: true,
    infinite: true,
    arrows: false,
    speed: 300,
    slidesToShow: 3,
    slidesToScroll: 1,
    responsive: [
      {
        breakpoint: 769,
        settings: {
          slidesToShow: 1,
          slidesToScroll: 1
        }
      }
    ]
  });
  
</script>

